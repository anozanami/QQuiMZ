<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- User Info -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp">

        <ImageView
            android:id="@+id/logged_in_user_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/default_icon"
            android:contentDescription="User Icon" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/logged_in_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logged-in User"
                android:textSize="16sp"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Points: "
                    android:textSize="14sp"
                    android:textColor="#666"
                    android:layout_marginTop="4dp"
                    />
            <TextView
                android:id="@+id/logged_in_user_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_marginTop="4dp"
                android:textSize="14sp"
                android:textColor="#666" />


            </LinearLayout>
        </LinearLayout>

        <ImageButton
            android:id="@+id/rename"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_settings"
            android:background = "#ffffff"
            android:contentDescription="Rename User" />

        <ImageButton
            android:id="@+id/set_alarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/alarm_icon"
            android:background="#ffffff"
            android:contentDescription="Set Alarm" />
    </LinearLayout>

    <!-- Logout / Secession -->
    <Button
        android:id="@+id/secession"
        android:backgroundTint="@color/cerulean"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="회원 탈퇴"
        android:layout_marginTop="20dp" />
</LinearLayout>
